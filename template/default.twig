<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <title>{{ title }}</title>
        <meta name="description" content="{{ description }}"/>
        <meta name="robots" content="index, follow"/>
        <meta property="og:title" content="{{ title }}"/>
        <meta property="og:image" content="{{baseUrl}}assets/images/logo.png"/>
        <meta property="og:site_name" content="{{ title }}"/>
        <meta property="og:url" content="{{ baseUrl }}"/>
        <meta property="og:description" content="{{ subTitle }}"/>
        <meta property="og:type" content="website"/>
        <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
        <link rel="stylesheet" href="{{ baseUrl }}/assets/css/all.css"/>
        <link rel="stylesheet" href="{{ baseUrl }}/assets/css/custom.css"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"/>
        <script src="//use.typekit.net/yjz4fyo.js"></script>
        <script>try{Typekit.load();}catch(e){}</script>
    </head>
    <body style="padding-top: 5em">

    {% block header %}
    <div class="wrapper" style="width: 100%">
      <div class="container">
    {% endblock %}

        <header class="site-header">
          <div class="site-title"><a href="{{baseUrl}}">{{ logo_title }}</a></div>
          <div class="site-slogan">{{ logo_subtitle }}</div>
        </header>

    {% block nav %}

        <div class="row">
            <div class="col-md-3">

              {% if show_menu_sub == true %}
              {% for section in menu_sub %}
              <h3>{{ section.title }}</h3>
              <ul>
                  {% for item in section.items %}
                  <li><a href="{{ baseUrl }}{{ item[0] }}">{{ item[1] }}</a></li>
                  {% endfor %}
              </ul>
              {% endfor %}

              {% else %}

              {% for itemId, item in menu.items %}
              <li>
                  <a href="{{ item.absoluteUrl|default(baseUrl ~ '/' ~ item.relativeUrl) }}">
                      {{ item.text|raw }}
                  </a>
              </li>
              {% endfor %}

              {% endif %}

            </div>
    {% endblock %}

    {% block content %}
      <div class="col-md-9" style="padding-left: 2em">
        <h1>{{ title }}</h1>
        {{ content|raw }}
      </div>
  {% endblock %}
    </div>

    <footer class="site-footer">
        <p>{{ footer|raw }}</p>
    </footer>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="{{baseUrl}}/assets/scripts/build/production.js"></script>
